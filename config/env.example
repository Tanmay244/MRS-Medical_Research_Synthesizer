# ----------------------------------------------------------------------------
# Application configuration template for the Medical Research Synthesizer.
# Copy this file to `.env` at the project root and replace placeholders.
# ----------------------------------------------------------------------------

APP_NAME="Medical Research Synthesizer"
API_PREFIX="/api"
DEBUG=false
ENVIRONMENT="development"

# ----------------------------------------------------------------------------
# AWS credentials (replace placeholders with secure values)
# ----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_SESSION_TOKEN=""
AWS_REGION="us-west-2"

# ----------------------------------------------------------------------------
# AWS Bedrock model configuration
# ----------------------------------------------------------------------------
BEDROCK_MODEL_ID="anthropic.claude-3-sonnet-20240229-v1:0"
EMBEDDING_MODEL_ID="amazon.titan-embed-text-v2"
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.2

# ----------------------------------------------------------------------------
# Vector store configuration
# ----------------------------------------------------------------------------
VECTOR_STORE_PATH="data/vector_store.json"

# ----------------------------------------------------------------------------
# Amazon S3 storage configuration
# ----------------------------------------------------------------------------
S3_BUCKET="your-research-corpus-bucket"
S3_PREFIX="documents/"
S3_MULTIPART_CHUNKSIZE_MB=32

# ----------------------------------------------------------------------------
# Document ingestion configuration
# ----------------------------------------------------------------------------
SUPPORTED_FILE_TYPES=".pdf,.txt,.docx"
CHUNK_OVERLAP=128
CHUNK_SIZE=1024
MAX_CHUNK_TOKENS=800
DUPLICATE_DETECTION_THRESHOLD=0.92

# ----------------------------------------------------------------------------
# Retrieval configuration
# ----------------------------------------------------------------------------
HYBRID_SEARCH_WEIGHT=0.6
MAX_RETRIEVAL_RESULTS=25
RERANK_TOP_K=10
METADATA_FILTER_FIELDS="year,journal,authors"

# ----------------------------------------------------------------------------
# Monitoring & logging
# ----------------------------------------------------------------------------
ENABLE_TRACING=true
METRICS_NAMESPACE="research-rag"
LOG_LEVEL="INFO"

# ----------------------------------------------------------------------------
# Optional AWS Cognito configuration
# ----------------------------------------------------------------------------
COGNITO_USER_POOL_ID=""
COGNITO_CLIENT_ID=""
ALLOWED_ORIGINS="https://localhost:3000,https://your-frontend-domain"


